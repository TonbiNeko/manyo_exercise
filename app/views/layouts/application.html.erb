<!DOCTYPE html>
<html>
  <head>
    <title>ManyoExercise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <%= link_to "Task管理", tasks_path, class: "navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <% if logged_in? %>
              <li class="nav-item">
                <%= link_to "Profile", user_path(current_user.id), class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Log out", session_path(current_user.id), method: :delete, class: "nav-link" %>
              </li>
                <% if current_user.admin? %>
                  <li class="nav-item" %>
                    <%= link_to "management page", admin_users_path, class: "nav-link" %>
                  </li>
                <% end %>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign up", new_user_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Login", new_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
       </div>
     </nav>
    </header>

    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <%= yield %>

    <footer>
      <p class="footer_text">manyo kadai</p>
      <p class="footer_text">task kanri app by TonbiNeko</p>
    </footer>
  </body>
</html>
